<BorderPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml"  >

    <!--     Re Read Border Pane-->

    <top>
        <Label text="This Label is a pretend Banner" BorderPane.alignment="TOP_CENTER"
        style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dotted"/>
    </top>

    <center>
        <Label text="We are the music makers and We are the dreamers of dreams,
                    Wandering by lone sea breakers and Sitting by desolate streams,
                    World losers and World forsakers on whom the pale moon gleams,
                    Yet we are movers and shakers of the world, for ever it seems" />
    </center>

    <left>
        <Label text="Left Post" alignment="center" />
    </left>

    <right>
        <Label text="Right Pos" alignment="center" />
    </right>

    <bottom>
        <HBox spacing="10" alignment="top_right">
            <padding>
                <Insets bottom="10" />
            </padding>

            <Button text="Okay" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>
        </HBox>
    </bottom>


